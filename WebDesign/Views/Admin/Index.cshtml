@model IEnumerable<UserRolesViewModel>
@using Microsoft.AspNetCore.Identity

<a class="btn btn-dark" asp-controller="Admin" asp-action="CreateRole">Создать роль</a>
<h2>Список пользователей</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Роли</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span>@role</span>
                    }
                </td>
                <td>
                    <a asp-action="EditUserRoles" asp-route-userId="@user.UserId" class="btn btn-primary">Изменить роли</a>
                </td>
            </tr>
        }
    </tbody>
</table>
