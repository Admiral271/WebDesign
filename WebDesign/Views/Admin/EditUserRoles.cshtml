@model ChangeRoleViewModel

<h2>Изменение ролей пользователя @Model.UserEmail</h2>

<form asp-action="EditUserRoles" asp-controller="Admin" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        @foreach (var role in Model.AllRoles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="roles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked" : "") />
                <label class="form-check-label">@role.Name</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
